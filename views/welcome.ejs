<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration</title>
    <link rel="stylesheet" href="/css/main.css">
</head>

<body>
    <div class="logout">
        <button id="order-btn">Donate</button>
        <script src="https://js.stripe.com/v3/"></script>
        <script>
            var stripe = Stripe('<%= stipePublishableKey%>');
            var orderBtn = document.getElementById('order-btn');
            orderBtn.addEventListener('click', function () {
                stripe.redirectToCheckout({
                    sessionId: '<%= sessionId %>'
                });
            });
        </script>
        <form action="/user/logout" method="POST">
            <button>Logout</button>
        </form>
    </div>
    <div class="main">

        <h1>User Details</h1>

        <form>

            <label for="fn">First Name:</label>
            <input type="text" name="firstName" id="fn" value="<%= user.firstName%>"><br><br>

            <label for="ln">Last Name:</label>
            <input type="text" name="lastName" id="ln" value="<%= user.lastName%>"><br><br>

            <label for="un">User Name:</label>
            <input type="text" name="userName" id="un" value="<%= user.userName%>"><br><br>

            <label for="pw">Password:</label>
            <input type="text" name="password" id="pw" value="&#129296;"><br><br>

        </form>
    </div>
</body>

</html>